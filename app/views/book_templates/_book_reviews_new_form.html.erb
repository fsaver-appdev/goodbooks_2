<form action="/create_review_from_book" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <input type="hidden" name="book_id" value="<%= @book.id %>">

  <div class="form-group">
    <label for="format">
      Format
    </label>

    <input type="text" id="format" name="format" class="form-control" value="<%= @review.format %>">
  </div>

  <div class="form-group">
    <label for="pages_read">
      Pages read
    </label>

    <input type="text" id="pages_read" name="pages_read" class="form-control" value="<%= @review.pages_read %>">
  </div>

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @review.rating %>">
  </div>

  <div class="form-group">
    <label for="review">
      Review
    </label>

    <textarea id="review" name="review" class="form-control" rows="3"><%= @review.review %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>
