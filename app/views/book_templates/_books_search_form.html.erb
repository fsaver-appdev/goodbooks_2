<%= search_form_for @q, :class => collapse_search_form, :id => "books_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :edition, "Edition" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :edition_gteq, :class => "form-control", :placeholder => "Edition greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :edition_lteq, :class => "form-control", :placeholder => "Edition less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :editorial_cont, "Editorial contains" %>
    <%= f.text_field :editorial_cont, :class => "form-control", :placeholder => "Editorial contains" %>
  </div>

  <div class="form-group">
    <%= f.label :pages, "Pages" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :pages_gteq, :class => "form-control", :placeholder => "Pages greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :pages_lteq, :class => "form-control", :placeholder => "Pages less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :subject_cont, "Subject contains" %>
    <%= f.text_field :subject_cont, :class => "form-control", :placeholder => "Subject contains" %>
  </div>

  <div class="form-group">
    <%= f.label :year, "Year" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='yeargteqPicker' data-target-input="nearest">
          <%= f.text_field :year_gteq, :class => "form-control datetimepicker-input", :placeholder => "Year greater than or equal to", :data => {:target => '#yeargteqPicker'} %>
          <div class="input-group-append" data-target='#yeargteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='yearlteqPicker' data-target-input="nearest">
          <%= f.text_field :year_lteq, :class => "form-control datetimepicker-input", :placeholder => "Year less than or equal to", :data => {:target => '#yearlteqPicker'} %>
          <div class="input-group-append" data-target='#yearlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#yeargteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#yearlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#yeargteqPicker').on("dp.change", function (e) {
              $('#yearlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#yearlteqPicker').on("dp.change", function (e) {
              $('#yeargteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :author_cont, "Author contains" %>
    <%= f.text_field :author_cont, :class => "form-control", :placeholder => "Author contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>




  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/books" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#books_filters">
  Show filters
</a>
