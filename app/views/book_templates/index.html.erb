<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All books
    </h1>

    <a href="/books/new" class="btn btn-block btn-outline-secondary">
      Add a new book
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "book_templates/books_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Author
        </th>

        <th>
          Year
        </th>

        <th>
          Subject
        </th>

        <th>
          Pages
        </th>

        <th>
          Editorial
        </th>

        <th>
          Edition
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <!-- Display book.id start -->
        <td>
          <%= book.id %>
        </td>
        <!-- Display book.id end -->

        <!-- Display book.title start -->
        <td>
          <%= book.title %>
        </td>
        <!-- Display book.title end -->

        <!-- Display book.author start -->
        <td>
          <%= book.author %>
        </td>
        <!-- Display book.author end -->

        <!-- Display book.year start -->
        <td>
          <%= book.year %>
        </td>
        <!-- Display book.year end -->

        <!-- Display book.subject start -->
        <td>
          <%= book.subject %>
        </td>
        <!-- Display book.subject end -->

        <!-- Display book.pages start -->
        <td>
          <%= book.pages %>
        </td>
        <!-- Display book.pages end -->

        <!-- Display book.editorial start -->
        <td>
          <%= book.editorial %>
        </td>
        <!-- Display book.editorial end -->

        <!-- Display book.edition start -->
        <td>
          <%= book.edition %>
        </td>
        <!-- Display book.edition end -->

        <!-- Display book.created_at start -->
        <td>
          <%= time_ago_in_words(book.created_at) %> ago
        </td>
        <!-- Display book.created_at end -->

        <!-- Display book.updated_at start -->
        <td>
          <%= time_ago_in_words(book.updated_at) %> ago
        </td>
        <!-- Display book.updated_at end -->

        <td>
          <a href="/books/<%= book.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @books, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
