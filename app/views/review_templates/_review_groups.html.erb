<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Groups

    <a data-toggle="collapse" href="#review_groups_new_form">
      Add group
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @review.groups.each do |group| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/groups/<%= group.id %>">
          <%= group.name %>
        </a>

        <a href="/delete_group_from_review_access/<%= group.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="review_groups_new_form">
        <%= render partial: "review_templates/review_groups_new_form" %>
      </div>
    </div>

  </ul>
</div>
