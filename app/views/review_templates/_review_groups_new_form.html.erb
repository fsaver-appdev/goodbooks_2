<!-- Form group start -->
<form action="/create_group_from_review" method="post">
<!-- Form group end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @group.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @group.user_id %>">
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for review_access_id start -->
  <!-- Input for review_access_id start -->
  <input type="hidden" name="review_access_id" value="<%= @review.id %>">
  <!-- Input for review_access_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create group
  </button>
</form>
